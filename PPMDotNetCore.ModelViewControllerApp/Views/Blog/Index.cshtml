@model List<BlogModel>
@{
    ViewData["Title"] = "Blog";
    var count = 0;
}
<h1>Blog List</h1>
<a href="/Blog/Create" class="btn btn-info">New</a>
<table class="table table-stdiped">
    <thead>
        <tr>
            <th>No.</th>
            <th>Title</th>
            <th>Author</th>
            <th>Content</th>
        </tr>
    </thead>
    <tbody>
        @foreach (BlogModel item in Model)
        {
            <tr>
                <td>
                    <a class="btn btn-warning" href="/Blog/Edit/@item.BlogId">
                        Edit
                    </a>
                    <a class="btn btn-danger" href="/Blog/Delete/@item.BlogId">Delete</a>
                </td>
                <td>@(++count)</td>
                <td>@item.BlogTitle</td>
                <td>@item.BlogAuthor</td>
                <td>@item.BlogContent</td>
            </tr>
        }
    </tbody>
</table>